    </PreferenceCategory>

    <PreferenceCategory android:title="Информация">
        <Preference
            android:key="about"
            android:title="О приложении"
            android:summary="Данные и контакты для обратной связи" />
    </PreferenceCategory>

</PreferenceScreen>