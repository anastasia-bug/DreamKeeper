    </PreferenceCategory>

    <PreferenceCategory android:title="Управление тегами">
        <Preference
            android:key="tag_list"
            android:title="Список тегов"
            android:summary="Открыть список тегов для просмотра и изменения" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Безопасность">

        <SwitchPreferenceCompat
            android:key="set_password"
            android:title="Установить пароль"
            android:summary="Ограничить доступ к приложению"
            android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Внешний вид">
        <ListPreference
            android:key="theme_preference"
            android:title="Тема"
            android:summary="Выберите тему приложения"
            android:entries="@array/theme_names"
            android:entryValues="@array/theme_values"
            android:defaultValue="system" />

