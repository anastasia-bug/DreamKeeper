<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="Уведомления">

        <SwitchPreferenceCompat
            android:key="reminder_enabled"
            android:title="Напоминания записать сон"
            android:summary="Включить ежедневные напоминания" />

        <Preference
            android:key="reminder_time"
            android:title="Время напоминания"
            android:summary="Выберите время"
            android:dependency="reminder_enabled" />

<!--        <SwitchPreferenceCompat-->
